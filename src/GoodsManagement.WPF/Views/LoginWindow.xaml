<Window x:Class="GoodsManagement.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontSize="24" FontWeight="Bold" TextAlignment="Center" Text="Login" />
            <TextBox x:Name="UsernameTextBox" Margin="0,20,0,10" PlaceholderText="Username" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" PlaceholderText="Password" />
            <Button Content="Login" Command="{Binding LoginCommand}" />
            <TextBlock x:Name="ErrorMessage" Foreground="Red" Text="{Binding ErrorMessage}" Visibility="{Binding IsErrorVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
        </StackPanel>
    </Grid>
</Window>